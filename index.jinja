        text-align: center;
        margin-bottom: 30px;
      }
      a {
        text-underline-offset: .15em;
      }
      a,
      a:visited {
        color: #0b0c0c;
      }
      a:hover {
        color: #00599f;
        text-decoration-thickness: 2px;
      }
      h2 a {
        text-decoration-thickness: 2px;
      }
      h2 a:hover {
        text-decoration-thickness: 3px;
      }
